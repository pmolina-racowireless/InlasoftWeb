@model IEnumerable<InlasoftWeb.Models.Caso>

@{
    ViewData["Title"] = "Index";
}

<h2>Listado de Casos</h2>

<table class="table">
    <thead>
        <tr>
                <th>
                    <a asp-action="Index" asp-route-sortOrder="@ViewData["DateSortParm"]">@Html.DisplayNameFor(model => model.FechaInicio)</a>
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Descripcion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Servicio.Materia.MateriaNombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Servicio.ServicioNombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Cliente.ClienteNombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Sucursal.SucursalNombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Contraparte)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Catastro)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FechaInicio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Servicio.Materia.MateriaNombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Servicio.ServicioNombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cliente.ClienteNombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sucursal.SucursalNombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Contraparte)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Catastro)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.CasoId" class="glyphicon glyphicon-folder-open"></a>
            </td>
        </tr>
}
    </tbody>
</table>
