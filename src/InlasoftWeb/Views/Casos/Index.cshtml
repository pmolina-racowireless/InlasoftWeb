@model IEnumerable<InlasoftWeb.Models.Caso>

@{
    ViewData["Title"] = "Listado de Casos";
}

<h2>@ViewData["Title"]</h2>

<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.FechaInicio)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Descripcion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Contraparte)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Catastro)
                </th>
            <th>
                @Html.DisplayNameFor(model => model.Cliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Firma)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Servicio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sucursal)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FechaInicio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Contraparte)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Catastro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cliente.ClienteNombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Firma.FirmaNombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Servicio.ServicioNombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sucursal.SucursalNombre)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.CasoId">Details</a>
            </td>
        </tr>
}
    </tbody>
</table>
