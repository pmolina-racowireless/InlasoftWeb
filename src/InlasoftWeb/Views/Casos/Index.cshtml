@model IEnumerable<InlasoftWeb.ViewModels.CasoViewModel>

@{
    ViewData["Title"] = "Index";
}
<h2>Listado de Casos</h2>
<form asp-action="Index" method="get">
    <div class="col-md-12">
        <span>Buscar :
            <input type="text" name="SearchString" value="@ViewData["currentFilter"]" />
            <input type="submit" value="Buscar" class="btn btn-default" />
        </span>
    </div>
</form>
@(Html
    .Grid(Model)
    .Build(columns =>
    {
        columns.Add(model => model.CasoId).Titled("Codigo").Sortable(true);
        columns.Add(model => model.Descripcion).Titled("Descripcion");

        columns.Add(model => model.Materia).Titled("Materia");
        columns.Add(model => model.Servicio).Titled("Servicio");
        columns.Add(model => model.Sucursal).Titled("Sucursal");
        columns.Add(model => model.Contraparte).Titled("Contraparte");
        columns.Add(Model => Html.ActionLink(string.Empty, "Details", "Casos", new { id = Model.CasoId }, new { @class = "glyphicon glyphicon-folder-open" }));

    })
    .Sortable()
    .Pageable(pager => {
        pager.RowsPerPage = 25;
        pager.PagesToDisplay = 5;
    })
)
