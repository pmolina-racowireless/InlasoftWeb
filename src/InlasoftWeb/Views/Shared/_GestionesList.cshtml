@model IEnumerable<InlasoftWeb.ViewModels.GestionViewModel>
@(Html
    .Grid(Model)
    .Build(columns =>
    {
        columns.Add(model => model.Fecha).Titled("Fecha").Formatted("{0:d}").Sortable(true);
        columns.Add(model => model.Hora).Titled("Hora");
        columns.Add(model => model.Motivo).Titled("Motivo");
        columns.Add(model => model.Abogado).Titled("Abogado");
        columns.Add(model => model.Trabajo).Titled("Trabajo");
        columns.Add(model => model.Comentario).Titled("Comentario");

    })
    .Sortable()
    .Pageable(pager =>
    {
        pager.RowsPerPage = 25;
        pager.PagesToDisplay = 5;
    })
    .Empty("Este caso no contiene gestiones")
    )

