@model IEnumerable<InlasoftWeb.ViewModels.AudienciaViewModel>
@(Html
    .Grid(Model)
    .Build(columns =>
    {
        columns.Add(model => model.Fecha).Titled("Fecha").Sortable(true);
        columns.Add(model => model.Hora).Titled("Hora");
        columns.Add(model => model.Motivo).Titled("Materia");
        columns.Add(model => model.Comentario).Titled("Servicio");
        columns.Add(model => model.Trabajo).Titled("Sucursal");
        columns.Add(Model => Html.ActionLink(string.Empty, "Details", "Audiencias", new { id = Model.AudienciaId }, new { @class = "glyphicon glyphicon-folder-open" }));

    })
    .Sortable()
    .Pageable(pager =>
    {
        pager.RowsPerPage = 25;
        pager.PagesToDisplay = 5;
    })
)

